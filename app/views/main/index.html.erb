<script>
var varUA = navigator.userAgent.toLowerCase();
var link = document.location.href.replace('https://','');

if (varUA.indexOf("kakaotalk")!=-1) {
  if (varUA.indexOf("android")!=-1) {
    location.href='intent://'+link+'#Intent;scheme=https;package=com.android.chrome;end;';
  }
  else if(varUA.indexOf("iphone")>-1||varUA.indexOf("ipad")>-1||varUA.indexOf("ipod")>-1){
    location.href='ftp://webconf02.saehaens.com/bridge.html?url:'+link;
  }
}
</script>


